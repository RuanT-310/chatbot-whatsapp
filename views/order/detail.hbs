<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-receipt"></i> Pedido #{{order.id}}</h2>
    <a href="/order" class="btn btn-outline-secondary">Voltar para a Lista</a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-dark text-white">Dados do Cliente</div>
            <div class="card-body">
                <p class="mb-1"><strong>Nome:</strong> {{order.customer.name}}</p>
                <p class="mb-1"><strong>Data:</strong> {{order.createdAt}}</p>
                <hr>
                <p class="mb-2"><strong>Status Pedido:</strong> 
                    <span class="badge {{statusBadge order.status}}">{{order.status}}</span>
                </p>
                <p class="mb-0"><strong>Status Pagamento:</strong> 
                    <span class="badge {{paymentBadge order.paymentStatus}}">{{order.paymentStatus}}</span>
                </p>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-secondary text-white">Ações</div>
            <div class="card-body d-grid gap-2">
                {{#ifEquals order.paymentStatus 'pending'}}
                    <form action="/order/pay/{{order.id}}" method="POST" class="d-grid">
                        <button class="btn btn-success">Marcar como Pago</button>
                    </form>
                {{/ifEquals}}
                
                {{#ifEquals order.status 'pending'}}
                    <form action="/order/confirm/{{order.id}}" method="POST" class="d-grid">
                        <button class="btn btn-primary">Confirmar Entrega</button>
                    </form>
                {{/ifEquals}}
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">Itens Comprados</div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Produto</th>
                            <th>Lote</th>
                            <th class="text-center">Qtd</th>
                            <th class="text-end">Preço Unit.</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each order.items}}
                        <tr>
                            <td>{{this.stock.product.name}}</td>
                            <td><small class="text-muted">{{this.stock.batchNumber}}</small></td>
                            <td class="text-center">{{this.quantity}}</td>
                            <td class="text-end">R$ {{this.unitPrice}}</td>
                            <td class="text-end fw-bold">R$ {{multiply this.quantity this.unitPrice}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="4" class="text-end fw-bold fs-5">Total do Pedido:</td>
                            <td class="text-end fw-bold fs-5 text-success">R$ {{order.totalPrice}}</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>