<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Novo Cliente</h5>
            </div>
            <div class="card-body">
                <form action="/customer/create" method="POST">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nome</label>
                        <input type="text" name="name" class="form-control" placeholder="Ex: Ruan Rolim" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">WhatsApp (Número)</label>
                        <input type="text" name="number" class="form-control" placeholder="55949..." required>
                        <small class="text-muted">DDI + DDD + Número</small>
                    </div>
                    <button type="submit" class="btn btn-success w-100 fw-bold">Cadastrar</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Base de Clientes</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>WhatsApp</th>
                                <th class="text-end">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each customers}}
                            <tr style="cursor: pointer;" onclick="if(!event.target.closest('form')) window.location='/customer/{{this.id}}'">
                                <td class="fw-bold">{{this.name}}</td>
                                <td>
                                    <a href="https://wa.me/{{this.number}}" target="_blank" class="text-decoration-none">
                                        <i class="bi bi-whatsapp text-success"></i> {{this.number}}
                                    </a>
                                </td>
                                <td class="text-end px-3">
                                    <form action="/customer/delete/{{this.id}}" method="POST" onsubmit="return confirm('Excluir cliente e histórico?')">
                                        <button class="btn btn-sm btn-outline-danger border-0">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {{else}}
                            <tr>
                                <td colspan="3" class="text-center py-4 text-muted">Nenhum cliente cadastrado.</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>