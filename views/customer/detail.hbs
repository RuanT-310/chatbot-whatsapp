<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person-badge"></i> Perfil: {{customer.name}}</h2>
    <a href="/customer" class="btn btn-outline-secondary">Voltar</a>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">Últimas Interações (Bot)</div>
            <div class="card-body p-0" style="max-height: 400px; overflow-y: auto;">
                <ul class="list-group list-group-flush">
                    {{#each customer.messages}}
                    <li class="list-group-item">
                        <small class="text-muted d-block">{{this.createdAt}}</small>
                        <p class="mb-0">{{this.content}}</p>
                    </li>
                    {{else}}
                    <li class="list-group-item text-center text-muted py-4">Sem mensagens registradas.</li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-success text-white">Histórico de Compras</div>
            <div class="card-body p-0">
                <table class="table table-sm mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each customer.orders}}
                        <tr>
                            <td>#{{this.id}}</td>
                            <td>R$ {{this.totalPrice}}</td>
                            <td><span class="badge {{statusBadge this.status}}">{{this.status}}</span></td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="3" class="text-center py-4 text-muted">Nenhum pedido realizado.</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>